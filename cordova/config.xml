<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vaultcut.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Team Instinct</name>
    <description>
        The one and only team app for the best team,  Team Instinct!
    </description>
    <author email="info@iriks-it.nl" href="http://iriks-it.nl/">
        VaultCut
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	
	<preference name="auto-hide-splash-screen"	value="false" />
	<preference name="AutoHideSplashScreen"		value="false" />
	<preference name="SplashScreenDelay"		value="2000" />
	<preference name="FadeSplashScreen" 		value="false"/>
	<preference name="FadeSplashScreenDuration" value="0"/>	
</widget>
